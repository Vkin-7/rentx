{
    "compilerOptions": {
        "target": "ES2020",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@Services/*": [
                "src/infra/services/*"
            ],
            "@DTO/*": [
                "src/domain/dto/*"
            ],
            "@Routes/*": [
                "src/infra/http/routes/*"
            ],
            "@Domain/*": [
                "src/domain/*"
            ],
            "@Entities/*": [
                "src/infra/data/entities/*"
            ],
            "@Controllers/*": [
                "src/controllers/*"
            ],
            "@Application/*": [
                "src/application/*"
            ],
            "@UseCases/*": [
                "src/application/useCases/*"
            ],
            "@Infra/*": [
                "src/infra/*"
            ],
            "@Repositories/*": [
                "src/infra/data/repositories/*"
            ],
            "@Shared/*": [
                "src/shared/*"
            ],
            "@Middlewares/*": [
                "src/infra/http/middlewares/*"
            ],
            "@Tests/*": [
                "__tests__/*"
            ]
        },
        "resolveJsonModule": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}